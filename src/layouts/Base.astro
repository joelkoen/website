---
import Head from "@/components/Head.astro";
import Header from "@/components/Header.astro";
import "@/styles/style.scss";

export interface Props {
  content: {
    title: string;
    description: string;
  };
}

const { content } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head {...content} />
  <body>
    <Header />
    <main>
      <slot />
    </main>
  </body>
</html>
